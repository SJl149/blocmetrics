<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="row">
          <div class="col-md-12">
            <h1><%= @registered_app.name %></h1>
          </div>
        </div>
        <div class="row">
          <div class="col-md-9">
            <h4><%= @registered_app.url %></h4>
          </div>
          <div class="col-md-3">
            <ul class="nav nav-pills">
              <li class="active"><%= link_to "Edit", edit_registered_app_path %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <h1></h1>
</div>
<div class="container">
  <div class="col-md-6">
    <h3 class="text-center text-primary">Events Overview</h3>
    <div class="well well-lg">
      <div class="pie-chart">
        <%= pie_chart @registered_app.events.group(:name).count %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <h3 class="text-center text-primary">Events Activity</h3>
    <div class="well well-lg">
      <%= line_chart @registered_app.events.group_by_day(:created_at).count %>
    </div>
  </div>
</div>
